{
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "./dist",
    "moduleResolution": "node",
    "noEmit": false,
    "rootDir": "./",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "*": ["*", "*.js", "*.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
